{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Open Mailhog",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8025"
    },
    {
      "name": "Start Server",
      "request": "launch",
      "command": "yarn dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node-terminal",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "Start Resources",
      "request": "launch",
      "command": "docker-compose up",
      "type": "node-terminal"
    },
    {
      "name": "Start Prisma Studio",
      "request": "launch",
      "command": "yarn prisma studio",
      "type": "node-terminal"
    }
  ],
  "compounds": [
    {
      "name": "Develop",
      "configurations": [
        "Start Resources",
        "Start Server"
      ]
    }
  ]
}
